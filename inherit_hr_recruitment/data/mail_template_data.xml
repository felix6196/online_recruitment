<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

         <!--Email template for Admission Follow Up screen. -->
         <record id="application_mail_templates" model="mail.template">
            <field name="name">Application success - Send by Email</field>
            <field name="subject">Application success</field>
            <field name="email_from">${object.user_id.email}</field>
            <field name="email_to">${object.email}</field>
            <field name="model_id" ref="inherit_hr_recruitment.model_hr_applicant"/>
            <field name="auto_delete" eval="True"/>
            <field name="user_signature" eval="True"/>
            <!-- <field name="lang">${object.user_id.partner_id.lang}</field> -->
            <field name="body_html"><![CDATA[
             <div style="width:600px; margin: 0 auto; font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 15px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); border: 1px solid #e4e4e4; padding:15px ">
                <span style="height:4px; width:100%; float:left; background: rgb(161,77,156); background: linear-gradient(90deg, rgba(161,77,156,1) 0%, rgba(161,77,156,1) 24%, rgba(37,170,225,1) 24%, rgba(37,170,225,1) 49%, rgba(244,223,51,1) 49%, rgba(244,223,51,1) 74%, rgba(246,139,32,1) 74%);">
                </span>
                 <br><b>Dear Candidate,</b></br>
                  <br>Thanks for submitting us an application.
                  Our team will get back to you shortly, on a follow up call to discuss futher on the next procedures.</br>
                    <br>Thanks for submitting your application.</br>
                   <br>Until then, stay in touch with us.</br>
					<a href="form_link" target="_blank">form_link</a></p>
                    <ul class="footer" style="list-style: none; padding:0 ">
                        <li style="margin: 0"><b>Thanks,</b></li>
                    </ul>
            </div>
            ]]></field>
        </record>



    </data>
</odoo>