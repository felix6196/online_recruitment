<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="crm_case_form_view_job_inherited"
			model="ir.ui.view">
			<field name="name">hr.applicant.form.inherited</field>
			<field name="model">hr.applicant</field>
			<field name="inherit_id"
				ref="hr_recruitment.crm_case_form_view_job" />
			<field name="arch" type="xml">
				<xpath expr='//field[@name="description"]' position="after">
					<notebook group="pappaya_base.group_nal_system_admin">
						<page name="Educational" string="Education">
							<field name="educational_history_ids"
								options="{'no_open': True,'no_create':True}">
								<tree>
									<field name="date_from" />
									<field name="date_to" />
									<field name="degree" />
									<field name="major" />
									<field name="university" />
									<field name="gpa" />
									<field name="is_present" />
								</tree>
							</field>
						</page>
						<page name="Experience" string="Experience">
							<field name="experience_history_ids"
								options="{'no_open': True,'no_create':True}">
								<tree>
									<field name="date_from" />
									<field name="date_to" />
									<field name="job_title" />
									<field name="company" />
									<field name="is_present" />
								</tree>
							</field>
						</page>
					</notebook>
				</xpath>
				<xpath expr='//div' position="after">
					<field name="image" widget="image" class="oe_avatar"/>
				</xpath>
				<xpath expr='//notebook' position="after">
				<separator string="Why should we hire you ?" placeholder="Candidate review..."/><field name="questionnaire" />
				</xpath>
			</field>
		</record>
	</data>
</odoo>