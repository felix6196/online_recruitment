									<t t-if="hr_applicant_id.educational_history_ids">
										<div>
											<h4>
												<a color="#80e5ff" style="padding: 28px;">Education details</a>
											</h4>
											<table class="table table-sm table-bordered">
												<thead>
													<tr>
														<th style="color: #FF5722;">Date from</th>
