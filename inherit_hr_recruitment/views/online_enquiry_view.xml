															<td>
																<t t-esc="educational_history_id.degree" />
															</td>
															<td>
																<t t-esc="educational_history_id.major" />
															</td>
															<td>
																<t t-esc="educational_history_id.university" />
															</td>
															<td>
																<t t-esc="educational_history_id.gpa" />
															</td>
															<t t-if="educational_history_id.is_present == True">
