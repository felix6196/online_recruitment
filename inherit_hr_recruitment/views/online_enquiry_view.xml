<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--Start Enquiry form -->
	<record id="website_application_form" model="ir.ui.view">
		<field name="name">Application form</field>
		<field name="type">qweb</field>
		<field name="key">website.application_form</field>
		<field name="arch" type="xml">
			<t name="Application form" t-name="website.application_form">
				<t t-call="website.layout">
					<!-- <title>Admission Enquiry Form</title> -->
					<form class="booking-form" action="/hr_applicant/creation/"
						method="post">
						<input type="hidden" name="csrf_token"
							t-att-value="request.csrf_token()" />
						<div class="enq-form">
							<div class="panel-body">
								<input id="std_img_file" name="std_img_file" type='file'
									class="hide std_img_file" />
								<div class="form-group col-lg-4"
									style="float: right;width: 138px;border: 3px solid #16a085;padding: 10px;">
									<img id="blah1" name="std_photo"
										src="http://placehold.it/180" alt="your image"
										class="img-upload image-border" style="width: 100px;" />
									<span>
										<input id="files1" class="files1" name="student_photo"
											type='file' style="visibility:hidden;width: 100px;"
											onchange="studentImageURL(this);"
											src="http://placehold.it/180" />
										<label for="files1" class="img-btn img-btn-primary">Select Image</label>
									</span>
									<br />
									<b>Candidate Photo</b>
									<input type="text" class="hide auto-save" id="file_data1"
										name="std_file_data" />
									<input type="text" class="hide auto-save" id="file_type1"
										name="std_file_type" />
									<input type="text" class="hide auto-save" id="file_name1"
										name="std_file_name" />
									<span class="filename hide" />
									<div class="imagearea d-none" />
								</div>
							</div>
							<script>
								$("#files1").on("change", function(e) {
								var fileName =
								e.target.files[0].name;
								$('#files1').text(fileName);
								var fileInput
								= $(this)[0];
								var file = fileInput.files[0];
								var reader = new
								FileReader();
								reader.onload = function(e) {
								var img = new Image();
								img.src = reader.result;
								localStorage.theImage = reader.result;
								var fileuploadname = localStorage.getItem("fileuploadname");
								$('.filename').text(fileuploadname);
								$('#file_data1').val(localStorage.getItem("fileuploadvalue"));
								$('#file_name1').val(fileuploadname);
								$('#file_type1').val(localStorage.getItem("file_type"));
								$(".imagearea").html(img);
								}
								reader.readAsDataURL(file);
								});
								function studentImageURL(input) {
								if (input.files &amp;&amp;
								input.files[0]) {
								var reader = new FileReader();

								reader.onload =
								function (e) {
								$('#blah1')
								.attr('src', e.target.result);
								$('#std_img_file').attr('src', e.target.result);
								};
								reader.readAsDataURL(input.files[0]);
								}
								}

								function
								LocalGuardianURL(input) {
								if (input.files &amp;&amp;
								input.files[0]) {
								var reader = new FileReader();

								reader.onload =
								function (e) {
								$('#blah2')
								.attr('src', e.target.result);
								};
								reader.readAsDataURL(input.files[0]);
								}
								}

								function
								VisitingCardURL(input) {
								if (input.files &amp;&amp;
								input.files[0]) {
								var reader = new FileReader();

								reader.onload =
								function (e) {
								$('#blah3')
								.attr('src', e.target.result);
								};
								reader.readAsDataURL(input.files[0]);
								}
								}
							</script>
							<center>
								<h3 class="title enq-title">Job Application Form</h3>
							</center>
							<div class="panel-group" id="accordion" role="tablist"
								aria-multiselectable="true">
								<div class="panel panel-default">
									<!-- Begin Academic Year -->
									<div class="form-group col-lg-4">
										<div class="col-md-6 floating-label">
											<input type="text" name="emp_name" required="1"
												class="form-control o_website_form_input floating-input"
												placeholder=" " />
											<label class="form-control" for="emp_name">Name</label>
										</div>
									</div>

									<div class="form-group col-lg-4">
										<div class="col-md-6 floating-label">
											<div class="selector">
												<select name="job_id"
													t-att-value="request.params.get('job_id', '')" required="1"
													class="form-control job_id floating-select"
													onclick="this.setAttribute('value', this.value);">
													<option value=""></option>
													<t t-foreach="job_ids or []" t-as="job_id">
